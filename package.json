  "bugs": {
    "url": "https://github.com/birnadam/gunDam/issues"
  },
  "homepage": "https://github.com/birnadam/gunDam#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "if-env": "^1.0.4",
    "mongoose": "^5.7.12",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "nodemon": "^1.19.4",
    "papaparse": "^5.2.0"
  }
